
<body>
    <div class="container-xxl bg-white p-0">

        <!-- Navbar Start -->
            {{> nav}}
        <!-- Navbar End -->

        <!-- Jobs Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s"> Post A Job </h1>

                
                <div class="">
                    <form action="/post-a-job" method="post">
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                                <input type="text" class="form-control" placeholder="Job Title" name="title">
                            </div>
                            <div class="col-12 col-sm-6">
                                <select id="" class="form-select" name="location">
                                    <option value=""> Choose Location </option>
                                    <option value="location"> Lagos </option>
                                    <option value="abuja"> Abuja </option>
                                    <option value="port-harcourt"> Port-Harcourt</option>
                                    <option value="kano"> Kano </option>
                                    <option value="jos"> Jos </option>
                              </select>                             
                            </div>

                            <div class="col-12 col-sm-6">
                                <input type="number" class="form-control" placeholder="Salary" name="salary">
                            </div>
                            <div class="col-12 col-sm-6">
                                 <select name="" id="" class="form-select" name="category">
                                       <option value=""> Choose Category </option>
                                       <option value="maketing"> Marketing </option>
                                       <option value="customer service"> Customer Service </option>
                                       <option value="human resource"> Human Resource </option>
                                 </select>    
                            </div>
                            <div class="col-12">
                                <textarea class="form-control" rows="5" placeholder="Description" name="description"></textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100" type="submit"> Apply Now </button>
                            </div>
                        </div>
                    </form>
                </div>


            </div>
        </div>
        <!-- Jobs End -->

       